@import url("https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&family=Source+Serif+4:opsz,wght@8..60,500;8..60,600&display=swap")

:root
  --bg #f7f6f4
  --card #ffffff
  --ink #1f2a33
  --muted #4f6272
  --accent #1b7a91
  --border #e4e0d8

body
  background var(--bg)
  color var(--ink)
  font-family "Work Sans", "Inter", "Helvetica Neue", Arial, sans-serif

.deck
  background linear-gradient(135deg, #fcfbfa 0%, #f0efec 100%)

.bespoke-slide
  width 1100px
  height 650px
  margin-left -(@width / 2)
  margin-top -(@height / 2)
  background var(--card)
  border 1px solid var(--border)
  border-radius 16px
  box-shadow 0 24px 90px -48px rgba(18, 44, 59, 0.35)
  padding 64px 120px
  align-items flex-start
  justify-content center

h1, h2, h3
  font-family "Work Sans", "Inter", "Helvetica Neue", Arial, sans-serif
  margin 0 0 16px 0
  line-height 1.08
  letter-spacing -0.02em

h1
  font-size 64px
  font-weight 700

h2
  font-size 44px
  font-weight 600
  color var(--muted)

h3
  font-size 32px
  font-weight 600

p, li
  font-size 26px
  color var(--ink)
  transition opacity 200ms ease, color 200ms ease, transform 200ms ease

p.lead
  font-size 26px
  color var(--muted)
  font-family "Source Serif 4", "Georgia", "Times New Roman", serif
  margin-top 12px

ul
  list-style none
  padding 0
  margin 24px 0 0 0
  li
    position relative
    padding-left 20px
    margin 12px 0
    &::before
      content "•"
      position absolute
      left 0
      color var(--accent)

.intro
  h1
    margin-bottom 10px
  h2
    margin-bottom 18px
  .lead
    max-width 640px

.speaker
  align-items center
  text-align center
  img.avatar
    width 140px
    height 140px
    object-fit cover
    border-radius 999px
    border 2px solid var(--border)
    margin-bottom 24px
    box-shadow 0 12px 36px -18px rgba(18, 44, 59, 0.35)
  p
    display flex
    align-items center
    justify-content center
    gap 10px
  img.inline-logo
    height 50px
    width auto
    margin-top -2px

.why-what
  h2
    margin-bottom 12px
  h3
    margin-top 22px

.where
  ul
    margin-bottom 18px
  .focus-note
    font-size 22px
    color var(--muted)
    margin-top 6px
    display inline-flex
    align-items center
    gap 8px
    &::before
      content "➜"
      color var(--accent)
      font-weight 600
  &.focus-kube
    li
      opacity 0.35
    li.kube
      opacity 1
      color var(--accent)
      font-weight 700
      transform scale(1.03)
